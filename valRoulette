import random

while True:
    # Set agents to roles
    roles = ['controller', 'sentinel', 'duelist', 'initiator', 'any']

    controller = ['Brimstone', 'Viper', 'Omen', 'Astra', 'Harbor', 'Clove']
    sentinel = ['Killjoy', 'Cypher', 'Sage', 'Chamber', 'Deadlock', 'Vyse']
    duelist = ['Phoenix', 'Jett', 'Reyna', 'Raze', 'Yoru', 'Neon', 'Iso']
    initiator = ['Sova', 'Breach', 'Skye', 'Kayo', 'Fade', 'Gekko', 'Tejo']
    any = controller + sentinel + duelist + initiator

    male = ['Brimstone','Omen','Harbor','Cypher','Chamber','Phoenix','Yoru','Iso','Sova','Breach','Kayo','Gekko','Tejo']
    female = ['Viper','Astra','Killjoy','Sage','Deadlock','Vyse','Jett','Reyna','Raze','Neon','Skye','Fade']
    unknown = ['Clove']

    while True:
        # Menu
        menuChoice = input("Welcome! Would you like to continue with the roulette? (Y/N): ")
        if menuChoice == 'Y':
            
            # Add players (max of 5)


            # Build a team feature (ask how many of each role and then make a team)
            try:
                while True:
                    try:
                        teamOrIndividual = int(input('Enter whether you would like to generate agents for a team (1) or individually (2) or CTRL+C to go back to the menu: '))
                        if teamOrIndividual == 1:
                            # Choice of choosing number of each role or just randomly generate
                            try:
                                chooseOrRandom = int(input("Would you like to choose how many of each role (1) or randomly generate the team (2)?: "))
                                if chooseOrRandom == 1:
                                    numberOfControllers = input("There are 5 agents in a team. How many controllers would you like?: ")
                                    numberOfSentinels = input("Sentinels?: ")
                                    numberOfDuelists = input("Duelists?: ")
                                    numberOfInitiators = input("Initiators?: ")
                                    ######

                                if chooseOrRandom == 2:
                                    randomTeam = []
                                    for i in range(5):
                                        chosenAgent = random.choice(any)
                                        randomTeam.append(chosenAgent)
                                        any.remove(chosenAgent)
                                    print(f"Your randomly generated team is {randomTeam}")
                            except ValueError:
                                print("Please enter a valid number.")
                        elif teamOrIndividual == 2:
                            # Ask input for type of role
                            while True:
                                roleChoice = input('Enter the type of role you would like to play (controller, sentinel, duelist, initiator, any): ')
                                if roleChoice in roles:
                                    break
                                else:
                                    print("Please enter a valid role")

                            # Exclude a role if choosing any

                            # Player creates own list of agents

                            # Assign agent role
                            if roleChoice == 'controller':
                                agentRole = controller
                            if roleChoice == 'sentinel':
                                agentRole = sentinel
                            if roleChoice == 'duelist':
                                agentRole = duelist
                            if roleChoice == 'initiator':
                                agentRole = initiator
                            if roleChoice == 'any':
                                agentRole = any

                            # Agent removal feature
                            while True:
                                print(f'This is the current agent pool: {agentRole}')
                                agentRemoval = input('Are there any agents you would like to remove? (Y/N): ')
                                if agentRemoval == 'Y':
                                    while True:
                                        removedAgent = input('Enter the agent you would like removed: ')
                                        if removedAgent in agentRole:
                                            agentRole.remove(removedAgent)
                                            
                                            # If list comes empty
                                            if agentRole == []:
                                                agentRole.append(removedAgent)
                                                print("You cannot remove anymore agents.")

                                            break
                                        else:
                                            print(f"Please enter a valid agent name from the following list: {agentRole}")
                                elif agentRemoval == 'N':
                                    break
                                else:
                                    print("Please enter a valid response (Y/N).")

                            # Agent addition feature

                            # Print chosen agent
                            chosenAgent = random.choice(agentRole)
                            print(f'Your chosen agent is {chosenAgent}')
                        else:
                            print("Please enter either 1 or 2.")
                    except ValueError:
                        print("Please enter a valid number.")
            except KeyboardInterrupt:
                break
        elif menuChoice == 'N':
            print("Program shutting down...")
            quit()
        else:
            print("Please enter either Y or N.")
    

